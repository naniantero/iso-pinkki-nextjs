{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src", // setting a value for baseUrl is required
    "paths": {
      "@components/*": ["components/*"],
      "@providers/*": ["providers/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/"],
      "@constants": ["constants/"],
      "@utils": ["utils/"],
      "@styles": ["styles/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "mock/index.js"],
  "exclude": ["node_modules"]
}
